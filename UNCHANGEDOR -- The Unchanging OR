#include<bits/stdc++.h>
using namespace std;

#define optimize() ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);

#define ll long long

//====================================

void solve(){
    ll n; cin>>n;
    ll ans = n-1;
    ll inc = 2;
    while(n>=inc){
        --ans;
        inc*=2;
        if(inc>1e9) break;
    }
    cout<<ans <<'\n';
}


int main(){
    optimize();

    ll t=1;
    cin>>t;
    while(t--)
        solve();
}
